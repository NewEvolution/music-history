<div class="row fade-in-anim">
  {{#each genre}}
  <div class="col-xs-6">
    <div class="input-group">
      <span class="input-group-addon">
        <input type="radio" name="genre" aria-label="..." value="{{genre}}">
      </span>
      <input type="text" class="form-control" readonly aria-label="{{genre}}" value="{{genre}}">
    </div>
  </div>
  {{/each}}
  <div class="col-xs-6">
    <div class="input-group">
      <span class="input-group-addon">
        <input type="radio" name="genre" aria-label="..." value="GetOther">
      </span>
      <input type="text" id="otherGenre" class="form-control" aria-label="..." placeholder="Other Genre...">
    </div>
  </div>
</div>